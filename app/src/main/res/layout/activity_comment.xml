<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingConstraints"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommentActivity">
<TextView
    android:text="精选评7论"
    android:textSize="20sp"
    android:padding="20dp"
    android:id="@+id/title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />

    <android.support.v7.widget.RecyclerView
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toTopOf="@id/input_txt"
        android:id="@+id/recycler"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </android.support.v7.widget.RecyclerView>
    <TextView
        android:background="@drawable/conner_bg"
        android:drawableLeft="@mipmap/ic_launcher"
        android:hint="说一下你的想法"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/input_txt"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="20dp" />
    <ImageView
        app:layout_constraintTop_toTopOf="@id/input_txt"
        app:layout_constraintBottom_toBottomOf="@id/input_txt"
        app:layout_constraintLeft_toRightOf="@id/input_txt"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/img_comment"
        android:layout_width="wrap_content"
        android:layout_height="0dp" />
    <TextView
        android:textSize="12sp"
        android:text="5"
        app:layout_constraintTop_toTopOf="@id/img_comment"
        app:layout_constraintBottom_toBottomOf="@id/img_comment"
        app:layout_constraintLeft_toRightOf="@id/img_comment"
        android:id="@+id/txt_comment_int"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        app:layout_constraintTop_toTopOf="@id/input_txt"
        app:layout_constraintBottom_toBottomOf="@id/input_txt"
        app:layout_constraintLeft_toRightOf="@id/txt_comment_int"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/img_good"
        android:layout_width="wrap_content"
        android:layout_height="0dp" />
    <TextView
        android:textSize="12sp"
        android:text="5"
        app:layout_constraintTop_toTopOf="@id/img_good"
        app:layout_constraintBottom_toBottomOf="@id/img_good"
        app:layout_constraintLeft_toRightOf="@id/img_good"
        android:id="@+id/txt_good_int"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</android.support.constraint.ConstraintLayout>